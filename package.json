{
    "name": "react-react-native-electron-boilerplate",
    "version": "0.0.1",
    "private": true,
    "scripts": {
      "android": "react-native run-android",
      "ios": "react-native run-ios",
      "start": "react-native start",
      "web": "yarn run web::build",
      "web::build": "webpack --mode production",
      "web::start": "webpack-dev-server --open --mode development",
      "electron": "yarn run electron::build",
      "electron::build": "yarn run web::build && cp ./src/electron.js ./dist/electron.js && electron ./dist/electron.js",
      "test": "jest",
      "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
    },
    "dependencies": {
      "@types/electron": "^1.6.10",
      "@types/react": "^16.9.49",
      "@types/react-dom": "^16.9.8",
      "@types/react-native": "^0.63.22",
      "@types/react-navigation": "^3.4.0",
      "@types/react-redux": "^7.1.9",
      "@types/redux": "^3.6.0",
      "electron": "^10.1.2",
      "react": "^16.13.1",
      "react-dom": "^16.13.1",
      "react-native": "^0.63.2",
      "react-navigation": "^4.4.1",
      "react-redux": "^7.2.1",
      "redux": "^4.0.5"
    },
    "devDependencies": {
      "@babel/core": "^7.11.6",
      "@babel/plugin-proposal-class-properties": "^7.10.4",
      "@babel/preset-env": "^7.11.5",
      "@babel/preset-react": "^7.10.4",
      "@babel/runtime": "^7.8.4",
      "@react-native-community/eslint-config": "^1.1.0",
      "@types/jest": "^25.2.3",
      "@types/react-test-renderer": "^16.9.2",
      "@typescript-eslint/eslint-plugin": "^2.27.0",
      "@typescript-eslint/parser": "^2.27.0",
      "add": "^2.0.6",
      "babel": "^6.23.0",
      "babel-jest": "^25.1.0",
      "babel-loader": "^8.1.0",
      "electron-packager": "^15.1.0",
      "eslint": "^6.5.1",
      "html-loader": "^1.3.1",
      "html-webpack-plugin": "^4.5.0",
      "jest": "^25.1.0",
      "metro-react-native-babel-preset": "^0.59.0",
      "react-test-renderer": "16.13.1",
      "ts-loader": "^8.0.4",
      "typescript": "^4.0.3",
      "webpack": "^4.44.2",
      "webpack-cli": "^3.3.12",
      "webpack-dev-server": "^3.11.0"
    },
    "jest": {
      "preset": "react-native",
      "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
      ]
    }
  }
  